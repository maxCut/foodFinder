{
    "name": "Chefbop",
    "description": "Make shopping for groceries simple",
    "version": "1.1",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "http://www.chefbop.com/*",
                "https://www.chefbop.com/*",
                "https://www.amazon.com/*",
                "http://www.amazon.com/*"
            ],
            "js": ["content-script.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "externally_connectable": {
        "ids": ["*"],
        "matches": [
            "http://www.chefbop.com/*",
            "https://www.chefbop.com/*",
            "https://www.amazon.com/*",
            "http://www.amazon.com/*"
        ]
    }
}
